<%= render partial: 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t('navigator.admin.title.index') %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon 'plus', Spree.t('navigator.admin.button.new'), new_admin_menu_item_path, class: 'button' %></li>
<% end %>

<% if @menu_items.any? %>
  <table class="index" id="listing_menu_items" data-hook>
    <colgroup>
      <col style="width: 45%">
      <col style="width: 40%">
      <col style="width: 15%">
    </colgroup>
    <thead>
      <tr data-hook="admin_menu_items_index_headers">
        <th><%= Spree.t('navigator.admin.table.header.name') %></th>
        <th><%= Spree.t('navigator.admin.table.header.url') %></th>
        <th data-hook="admin_menu_items_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody data-hook="admin_menu_items_index_rows">
      <% @menu_items.each do |item| %>
      <tr id="<%= spree_dom_id item %>" class="<%= cycle('odd', 'even')%>">
        <td><%= item.name %></td>
        <td><%= item.url %></td>
        <td class="actions">
          <%= link_to_edit(item, { no_text: true, url: edit_admin_menu_item_path(item.id) }) %>
          <%= link_to_delete(item, { no_text: true, url: admin_menu_item_path(item.id) }) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t('navigator.admin.no_resource_found') %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_menu_item_path %>!
  </div>
<% end %>
